	<Grid>
		
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"></RowDefinition>
			<RowDefinition></RowDefinition>
		</Grid.RowDefinitions>

		<Border Grid.Row="0" BorderBrush="#FFCBBEBE" BorderThickness="2" CornerRadius="10">
			<StackPanel VerticalAlignment="Top" Orientation="Horizontal" Grid.Row="0" Grid.Column="0">
				<Button Width="60" Height="60" BorderBrush="Gray" BorderThickness="1">
					<Image Source="images/open.png" ToolTip="Open"></Image>
				</Button>
				<Button Width="60" Height="60" BorderBrush="Gray" BorderThickness="1">
					<Image Source="images/broom.png" ToolTip="Clear"></Image>
				</Button>
				<Button Width="60" Height="60" BorderBrush="Gray" BorderThickness="1">
					<Image Source="images/copy.png" ToolTip="Copy"></Image>
				</Button>
				<Button Width="60" Height="60" BorderBrush="Gray" BorderThickness="1">
					<Image Source="images/paste.png" ToolTip="Paste"></Image>
				</Button>
			</StackPanel>
		</Border>

		<Grid Grid.Row="1" Margin="10 10 10 0">
			<Grid.RowDefinitions>
				<RowDefinition Height="3*"></RowDefinition>
				<RowDefinition></RowDefinition>
			</Grid.RowDefinitions>

			<TextBox Grid.Row="0" ScrollViewer.VerticalScrollBarVisibility="Visible"></TextBox>

			<DockPanel Grid.Row="1" Height="Auto">
				<Button DockPanel.Dock="Bottom" Width="20" Height="20">OK</Button>
			</DockPanel>
		</Grid>

	</Grid>
	
